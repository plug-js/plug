{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "types": [
      "node",
      "mocha",
      "chai",
      "chai-as-promised",
    ],
    "removeComments": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "sourceMap": false,
    "inlineSourceMap": true,
    "strict": true,
    "target": "es2020",
    "declaration": true,
    "allowJs": false,
  },
  "exclude": [
    "test/support",
    "bootstrap",
    "build/",
  ],
}
